{
  // These tasks will run in order when initializing your CodeSandbox project.
  "setupTasks": [
    {
      "name": "Install Dependencies",
      "command": "yarn install"
    }
  ],

  // These tasks can be run from CodeSandbox. Running one will open a log in the app.
  "tasks": {
    "backend:dev": {
      "name": "backend:dev",
      "command": "yarn backend:dev",
      "runAtStart": false
    },
    "backend:lint": {
      "name": "backend:lint",
      "command": "yarn backend:lint",
      "runAtStart": false
    },
    "backend:lint:fix": {
      "name": "backend:lint:fix",
      "command": "yarn backend:lint:fix",
      "runAtStart": false
    },
    "frontend:dev": {
      "name": "frontend:dev",
      "command": "yarn frontend:dev",
      "runAtStart": false
    },
    "frontend:build": {
      "name": "frontend:build",
      "command": "yarn frontend:build",
      "runAtStart": true
    },
    "frontend:start": {
      "name": "frontend:start",
      "command": "yarn frontend:start",
      "runAtStart": false
    },
    "frontend:lint": {
      "name": "frontend:lint",
      "command": "yarn frontend:lint",
      "runAtStart": false
    },
    "frontend:ts:lint": {
      "name": "frontend:ts:lint",
      "command": "yarn frontend:ts:lint",
      "runAtStart": false
    },
    "frontend:ts:lint:fix": {
      "name": "frontend:ts:lint:fix",
      "command": "yarn frontend:ts:lint:fix",
      "runAtStart": false
    }
  }
}
